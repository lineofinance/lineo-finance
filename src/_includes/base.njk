<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or 'Lineo Finance - Automatisierte Wertpapierbuchhaltung' }}</title>
    <meta name="description" content="{{ description or 'Ihre Lösung für automatisierte Wertpapierbuchhaltung. Effizient, präzise und revisionssicher.' }}">
    
    <!-- Open Graph -->
    <meta property="og:title" content="{{ ogTitle or title or 'Lineo Finance' }}">
    <meta property="og:description" content="{{ ogDescription or description or 'Automatisierte Wertpapierbuchhaltung' }}">
    <meta property="og:image" content="{{ ogImage or '/assets/images/og-image.jpg' }}">
    <meta property="og:url" content="{{ ogUrl or 'https://www.lineo.finance' }}{{ page.url }}">
    
    <!-- Canonical URL -->
    <link rel="canonical" href="https://www.lineo.finance{{ page.url }}">
    
    <!-- Structured Data -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "FinancialService",
        "name": "Lineo Finance",
        "alternateName": "Lineo Finance GmbH",
        "description": "Automatisierte Wertpapierbuchhaltung für vermögensverwaltende Kapitalgesellschaften, Steuerkanzleien und Privatpersonen mit vermögensverwaltenden GmbHs",
        "url": "https://www.lineo.finance",
        "logo": "https://www.lineo.finance/assets/images/logo.webp",
        "image": "https://www.lineo.finance/assets/images/og-image.jpg",
        "email": "support@lineo.finance",
        "contactPoint": {
            "@type": "ContactPoint",
            "email": "support@lineo.finance",
            "contactType": "customer support",
            "availableLanguage": ["German", "de"]
        },
        "address": {
            "@type": "PostalAddress",
            "streetAddress": "Neptunstr. 20a",
            "addressLocality": "Moosburg",
            "postalCode": "85368",
            "addressCountry": "DE",
            "addressRegion": "Bayern"
        },
        "areaServed": {
            "@type": "Country",
            "name": "Germany"
        },
        "serviceType": ["Wertpapierbuchhaltung", "Automatisierte Buchhaltung", "Steuerberatung"],
        "hasOfferCatalog": {
            "@type": "OfferCatalog",
            "name": "Lineo Finance Services",
            "itemListElement": [
                {
                    "@type": "Offer",
                    "itemOffered": {
                        "@type": "Service",
                        "name": "Automatisierte Wertpapierbuchhaltung",
                        "description": "Vollständige Automatisierung der Wertpapierbuchhaltung für Broker-Konten"
                    }
                },
                {
                    "@type": "Offer",
                    "itemOffered": {
                        "@type": "Service",
                        "name": "DATEV Integration",
                        "description": "Nahtlose Integration in DATEV Buchhaltungssysteme"
                    }
                },
                {
                    "@type": "Offer",
                    "itemOffered": {
                        "@type": "Service",
                        "name": "Broker Anbindung",
                        "description": "Direkte Anbindung an Interactive Brokers, CapTrader und weitere Broker"
                    }
                }
            ]
        },
        "knowsAbout": ["Wertpapiere", "Buchhaltung", "DATEV", "Steuerrecht", "Kapitalgesellschaften", "GmbH", "AG", "Familienstiftungen"],
        "foundingDate": "2021",
        "foundingLocation": {
            "@type": "Place",
            "name": "Moosburg, Germany"
        }
    }
    </script>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.png">
    
    <!-- Google Analytics 4 will be loaded by cookie consent script -->
    
    <!-- CSS -->
    <link rel="stylesheet" href="/css/fonts.css">
    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <!-- Compiled SCSS (includes all styles) -->
    <link rel="stylesheet" href="/scss/main.css">
</head>
<body>
    <!-- Skip Navigation Link for Screen Readers -->
    <a href="#main" class="skip-link">Zum Hauptinhalt springen</a>
    
    {% include "header.html" %}

    <main id="main" tabindex="-1">
        {{ content | safe }}
    </main>

    {% include "footer.html" %}

    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <!-- API Configuration (generated during deployment) -->
    <script src="/js/config.js"></script>
    <!-- Cookie Consent (must load first) -->
    <script src="/js/cookie-consent.js"></script>
    <!-- JavaScript -->
    <script src="/js/main.js"></script>
    <script src="/js/forms.js"></script>
    <script src="/js/swiper-init.js"></script>
    {% if pageScripts %}
    <!-- Page Specific JavaScript -->
    {% for script in pageScripts %}
    <script src="{{ script }}"></script>
    {% endfor %}
    {% endif %}
</body>
</html>